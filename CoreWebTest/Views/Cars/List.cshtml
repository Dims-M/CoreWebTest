@using CoreWebTest.ViewModels;
@model CarsListViewModel;
    @{
        Layout = null;
    }

    <!DOCTYPE html>

    <html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>List</title>
    </head>
    <body>
        <h2>Все наши автомобили которые есть в наличии</h2>
        @{ <h1>@Model.CurrentCategory</h1> //<h1>@ViewBag.Category</h1>
        foreach (var car in Model.AllCars) // c помощью специалнього обьекта Model. в него передается данные при вызове вьюхи
        {
            <div>
                <h2>Модель: @car.Name</h2>
                <p>Цена: @car.price.ToString("c")</p>
                <h2>Описание: @car.ShortDesc</h2>
            </div>

        }
        }
    </body>
</html>
